@model IEnumerable<BeautyStudioPractice.Пигменты>

@{
    ViewBag.Title = "Пигменты";
}
<style>
    .inlineb {
        display: inline-block;
        margin-right: 5px;
        border-radius: 8px;
        background-color: white;
        border: 2px solid #2a172b;
        color: black;
        padding: 7px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
    }

        .inlineb:hover {
            background-color: #99669a; /* Green */
            color: white;
        }

    .inlinel {
        display: inline-block;
        margin-right: 5px;
    }

    .inlinei {
        display: inline-block;
        margin-right: 5px;
        border-radius: 8px;
        background-color: white;
        border: 2px solid #2a172b;
        color: black;
        padding: 7px;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
    }
</style>
<h2>Пигменты</h2>

<p>
    @Html.ActionLink("Добавить новый пигмент", "Create", new { @Controller = "Пигменты" }, new { @class = "inlineb" })
</p>
<table class="table" style="font-size:15px">
    <tr>
        <th>
            @Html.Label("Название пигмента")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Название_пигмента)
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id_пигмента }, new { @class = "inlinel u-active-none u-border-none u-button-link u-button-style u-hover-none u-none u-text-body-color u-text-hover-custom-color-2 " })
        </td>
    </tr>
}

</table>
