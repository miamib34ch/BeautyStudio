
@{
    ViewBag.Title = "Смена пароля";
}
<style>
    .inlineb {
        display: inline-block;
        margin-right: 5px;
        border-radius: 8px;
        background-color: white;
        border: 2px solid #2a172b;
        color: black;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
    }

        .inlineb:hover {
            background-color: #99669a;
            color: white;
        }

    .inlinei {
        display: inline-block;
        margin-right: 5px;
        border-radius: 8px;
        background-color: white;
        border: 2px solid #2a172b;
        color: black;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
    }
</style>
<h2>Смена пароля</h2>
<hr />
@using (Html.BeginForm("ChangePassword", "Словари"))
{
    <input class = "inlinei" id="newpass" name="newpass" type="password" autocomplete="new-password" aria-describedby="password-constraints" required>
    <button class = "inlineb" type="submit">Сменить пароль</button>
}

